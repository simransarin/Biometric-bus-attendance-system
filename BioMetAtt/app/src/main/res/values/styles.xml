<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextLogin_style">
        <item name="android:background">@drawable/edittextlogin_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColorHint">#6B7A8B</item>
        <item name="android:textColor">#6B7A8B</item>
        <item name="android:ems">10</item>
    </style>

    <style name="buttonlogin_style">
        <item name="android:background">@drawable/buttonlogin_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textView_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#6F7A8B</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:enabled">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="textViewstudent_style">
        <item name="android:background">@color/graybg</item>
        <item name="android:textColor">#1f1f1f</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:enabled">true</item>
        <item name="android:text">none</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="textViewstudenttitles_style">
        <item name="android:background">@color/graybg</item>
        <item name="android:textColor">@color/lineblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:enabled">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="editText_suggestions">
        <item name="android:background">@drawable/edittextsuggestions_bg</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/lineblue</item>
        <item name="android:thumbTextPadding">5dp</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
